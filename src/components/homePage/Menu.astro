---
import Button from "@homePage/Button.astro"
import { getState } from "@lib/state"
const { menu } = getState()

type Props = {
  id: string
}

const { id } = Astro.props as Props
---

<style>
  .vertical-text {
    writing-mode: vertical-lr;
  }
</style>

<section
  id={id}
  class="w-[400px] h-[600px] bg-slate-400 hidden absolute p-2 pl-0 border border-slate-900"
>
  <div class="flex h-full w-full gap-4">
    <div class="bg-slate-300 w-12 h-full flex items-end">
      <h2 class="vertical-text transform rotate-180 mb-2 text-center">
        Fl√°vio Zanoni Gallon
      </h2>
    </div>
    <div class="flex flex-col w-full items-start">
      {
        menu.items.map((item, index) => (
          <Button variant="secondary" customCss="w-full" id={index.toString()}>
            {item.title}
          </Button>
        ))
      }
    </div>
  </div>
</section>
