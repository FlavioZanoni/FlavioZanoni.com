---
const { frontmatter } = Astro.props
---

<section class="flex flex-col gap-2 shadow-md bg-white p-4">
  <div class="w-full flex justify-between p-2">
    <div>
      <div class="flex flex-row gap-2 items-center">
        <h1 class="text-lg font-semibold">{frontmatter.title}</h1>
        <span>-</span>
        <p class="text-sm">{frontmatter.jobTitle}</p>
      </div>
      <div class="flex flex-col ml-2">
        <p>
          <span class="font-semibold">Job Type:</span>
          {frontmatter.jobType}
        </p>
        <p>
          <span class="font-semibold">Job Location:</span>
          {frontmatter.jobLocation}
        </p>
      </div>
    </div>
    <div class="flex gap-2 text-sm mt-2">
      <p>{frontmatter.start}</p>
      <p>-</p>
      <p>{frontmatter.end}</p>
    </div>
  </div>

  <div class="p-4 pt-2">
    <slot />
  </div>
</section>

<style is:inline>
  a {
    color: darkcyan;
  }

  li {
    padding: 4px;
  }

  img {
    max-width: 350px;
    pointer-events: none;
    user-select: none;
  }
</style>
