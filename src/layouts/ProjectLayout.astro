---
const { frontmatter } = Astro.props
---

<section class="flex flex-col gap-2 shadow-md bg-white p-4">
  <div class="w-full flex justify-between p-2">
    <div>
      <h1 class="text-lg font-semibold">{frontmatter.title}</h1>
      <p class="text-sm ml-2">
        <span class="font-semibold">Status:</span>
        {frontmatter.status}
      </p>
    </div>

    <div class="flex gap-2 text-sm">
      <p>{frontmatter.start}</p>
      <p>-</p>
      <p>{frontmatter.end}</p>
    </div>
  </div>

  <div class="p-4 pt-2">
    <slot />
  </div>
</section>

<style is:inline>
  a {
    color: #2aadad;
  }

  li {
    padding: 4px;
  }

  img {
    max-width: 350px;
    pointer-events: none;
    user-select: none;
  }
</style>
